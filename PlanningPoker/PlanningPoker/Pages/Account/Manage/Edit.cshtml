@page 
@model EditModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Index; 
    Layout = "../../_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.DOB" class="form-control" />
                <label asp-for="Input.DOB" class="form-label"></label>
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-group overflow-auto" style="height: 200px;">
            @foreach (var team in Model._team)
            {
                if (team.Name == Model._oldteam)
                {
                    //<div class="form-floating" value="@team.Name">   
                    <input asp-for="Input.TeamName" type="radio" value="@team.Name" checked=checked/>
                    <label asp-for="Input.TeamName">@team.Name</label>
                    <span asp-validation-for="Input.TeamName" class="text-danger"></span>
                    <br />
                    //</div> 
                }
                else
                {
                    //<div class="form-floating" value="@team.Name">  
                    <input asp-for="Input.TeamName" type="radio" value="@team.Name"/>
                    <label asp-for="Input.TeamName" class="form-label">@team.Name</label>
                    <span asp-validation-for="Input.TeamName" class="text-danger"></span>
                    <br />
                    //</div>  
                }
                <br /> 
            }
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <input asp-for="Input.ImageFile" accept="image/*" />
                <label asp-for="Input.ImageFile" class="control-label"></label>           
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div> 
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>          
        </form>
        <a href="../Profile">Go Back</a>
    </div>
</div>

